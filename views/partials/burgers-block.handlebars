<div class="col s12 m6 l6 right-align" id="burgers">
    {{#each burgers}}
    {{#unless devoured}}
    <div class="row">
        <div class="col s10 m10 l10">
            <li>{{id}}. Burger: {{burger_name}}</li>
        </div>
        <div class="col s2 m2 l2">
            <button class="btn devourBurger" data={{id}}>Devour</button>
        </div>
    </div>
    {{/unless}}
    {{/each}}
</div>

<div class="col s12 m6 l6" id="devouredBurgers">
    {{#each burgers}}
    {{#if devoured}}
    <li class="devoured">{{id}}. Burger: {{burger_name}}</li>
    {{/if}}
    {{/each}}
</div>